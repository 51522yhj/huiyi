			<if test="query.lastJoinTimeStart!= null and query.lastJoinTimeStart!=''">
				 <![CDATA[ and  m.last_join_time>=str_to_date(#{query.lastJoinTimeStart}, '%Y-%m-%d') ]]>
			</if>
			<if test="query.lastJoinTimeEnd!= null and query.lastJoinTimeEnd!=''">
				 <![CDATA[ and  m.last_join_time< date_sub(str_to_date(#{query.lastJoinTimeEnd},'%Y-%m-%d'),interval -1 day) ]]>
